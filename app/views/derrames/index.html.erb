<table>
    <% @derrames.each do |derrame| %>
  <thead>
    <tr>
      <th><h1><%= derrame.title %></h1></th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td align="right">Fecha de creaci√≥n: <%= derrame.created_at.strftime("%d %b. %Y") %></td>
	<td><%= link_to 'Show', derrame %></td>
	<% if Rails.env.development? %>
	<td><% Rails.env %></td>
	<td><%= link_to 'Edit', edit_derrame_path(derrame) %></td>
	<td><%= link_to 'Destroy', derrame, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	<% end %>
      </tr>
      <tr style="background-color:#D0D0D0;">	
        <td colspan="4" style="white-space: pre-wrap;";><%= derrame.content %></td>
      </tr>
      <tr><td><%= google_plus_button(href: derrame_url(derrame), size: "medium", annotation: "bubble", script: "true") %> <%= tweet_button(url: derrame_url(derrame), text: derrame.title, via: "derramandolacabeza", count: "horizontal" ) %> </td></tr>
    <% end %>
  </tbody>
</table>

<br>

<center><%= will_paginate @derrames, :previous_label => t("Anterior"), :next_label => t("Siguiente") %></center>

<% if Rails.env.development? %>
<%= link_to 'New Derrame', new_derrame_path %>
<% end %>
